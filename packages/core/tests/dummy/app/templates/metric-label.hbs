<div class="metric-label__container">
  <NaviVisualizations::MetricLabel
    @model={{this.model}}
    @options={{hash
      description="Hit Points (HP)"
      metric=(hash metric="hp" parameters=(hash))
    }}
  />
  <NaviVisualizations::MetricLabel
    @model={{this.model}}
    @options={{hash
      description="Magic Points (MP)"
      metric=(hash metric="magic" parameters=(hash))
    }}
  />
  <NaviVisualizations::MetricLabel
    @model={{this.model}}
    @options={{hash
      description="Rupees"
      metric=(hash metric="rupees" parameters=(hash))
      format="$0,0[.]00"
    }}
  />
  <NaviVisualizations::MetricLabel
    @model={{this.model}}
    @options={{hash
      description="Arrows"
      metric=(hash metric="arrows" parameters=(hash))
      format="$0,0[.]00"
    }}
  />
  <NaviVisualizationConfig::Wrapper
    @request={{this.request}}
    @response={{this.response}}
    @visualization={{this.metricVisualization}}
    @onUpdateConfig={{this.onUpdateConfig}}
  />
  <NaviVisualizations::MetricLabel
    @model={{this.model}}
    @options={{this.metricLabelOptions}}
  />
</div>
